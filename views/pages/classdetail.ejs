<% include ../partials/header %>
<div>
        <div class="container">
            <h1>Student for <%= detail.subject_id %> <%= detail.subject_name %></h1>
            <table class="table table-striped table-inverse">
                <thead class="thead-inverse">
                    <tr>
                        <th>ID/th>
                        <th>Name</th>
                        <th>Major</th>
                    </tr>
                    </thead>
                    <tbody>
                           <% detail.students.forEach(function(s) { %>
                               <tr>
                                 <td><%= s.sid %></td>
                                 <td><%= s.name%></td>
                                 <td><%= s.major %></td>
                             </tr>
                             <% }); %>
                    </tbody>
            </table>
        </div>
       </div>
    
<% include ../partials/footer %>